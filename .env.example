# =================================
# NEUROCARDS BOT - Environment Configuration
# =================================

# -------------------------------------
# TELEGRAM BOT
# -------------------------------------
BOT_TOKEN=""
WEBHOOK_SECRET_TOKEN=""

# -------------------------------------
# DATABASE CONFIGURATION
# -------------------------------------
# Выберите тип базы данных: "postgres" или "supabase"
DATABASE_TYPE="postgres"

# Для PostgreSQL (если DATABASE_TYPE=postgres):
DATABASE_URL="postgresql://neurocards:your_password@localhost:5432/neurocards"

# Для Supabase (если DATABASE_TYPE=supabase):
SUPABASE_URL=""
SUPABASE_SERVICE_ROLE_KEY=""

# -------------------------------------
# STORAGE CONFIGURATION
# -------------------------------------
# Выберите тип хранилища: "local" или "supabase"
STORAGE_TYPE="local"

# Для локального хранилища (если STORAGE_TYPE=local):
STORAGE_BASE_PATH="/var/neurocards/storage"

# Для Supabase Storage (если STORAGE_TYPE=supabase):
SUPABASE_BUCKET_INPUTS="inputs"
SUPABASE_BUCKET_OUTPUTS="outputs"

# -------------------------------------
# AI SERVICES
# -------------------------------------
# OpenAI API для генерации промптов
OPENAI_API_KEY=""

# KIE AI для генерации видео (Sora 2)
KIE_API_KEY=""

# -------------------------------------
# PUBLIC URL CONFIGURATION
# -------------------------------------
# URL бота для webhook (production)
PUBLIC_BASE_URL=""

# Домен для публичных ссылок на файлы (если STORAGE_TYPE=local)
PUBLIC_DOMAIN="https://yourdomain.com"

# -------------------------------------
# SERVER CONFIGURATION
# -------------------------------------
PORT="10000"
