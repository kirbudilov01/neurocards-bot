# ========================================
# Telegram Bot Configuration
# ========================================

# Токен бота от @BotFather
BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# URL для webhook (замени на свой IP или домен)
WEBHOOK_URL=https://YOUR_SERVER_IP:8443/webhook

# Секретный токен для защиты webhook (необязательно)
WEBHOOK_SECRET_TOKEN=your_random_secret_here

# ========================================
# Database Configuration
# ========================================

# При деплое на VPS будет автоматически настроено:
# postgresql://botuser:PASSWORD@localhost:5432/neurocards
DATABASE_URL=postgresql://botuser:PASSWORD@localhost:5432/neurocards

# Для Supabase (если используешь):
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_SERVICE_KEY=your_service_role_key_here

# ========================================
# Storage Configuration
# ========================================

# Тип хранилища: "local" или "supabase"
STORAGE_TYPE=local

# Путь для локального хранилища (при STORAGE_TYPE=local)
STORAGE_PATH=/var/neurocards/storage

# Базовый URL для доступа к файлам
BASE_URL=https://YOUR_SERVER_IP

# Для Supabase Storage (если используешь):
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_SERVICE_KEY=your_service_role_key_here

# ========================================
# AI APIs
# ========================================

# KIE.AI API для генерации видео (Sora-2)
KIE_API_KEY=kie_your_api_key_here

# OpenAI API для генерации промптов (GPT-4)
OPENAI_API_KEY=sk-your_openai_api_key_here

# ========================================
# Environment
# ========================================

# Режим работы: production или development
ENVIRONMENT=production

# ========================================
# Optional: Worker Configuration
# ========================================

# ID воркера (устанавливается автоматически через systemd)
# WORKER_ID=1

# ========================================
# Optional: MinIO (S3-compatible storage)
# ========================================

# Если используешь MinIO вместо локального хранилища:
# MINIO_ENDPOINT=localhost:9000
# MINIO_ACCESS_KEY=admin
# MINIO_SECRET_KEY=your_minio_password
# MINIO_SECURE=false
